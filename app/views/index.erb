<h1>All Tasks</h1>

  <div>
    <% @tasks.each do |task| %>
      <h3><%= task.id %>: <a href="/tasks/<%= task.id %>"><%= task.title %></a></h3>
      <a href="/tasks/<%= task.id %>/edit">Edit</a>


  <form action="/tasks/<%= task.id %>" method="POST">
    <input type="hidden" value="DELETE" name="_method">
    <input type="submit" value="Delete">
  </form>

    <% end %>
  </div>
